<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutExample.FlyoutPageDemo"
             Title="FlyoutPageDemo"
             FlyoutLayoutBehavior="Default">
    <FlyoutPage.Flyout>
        <ContentPage Title="Master Page">
            <Label Text="Master page details" Background="green"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Detail Page">
            <Label Text="Detail page details" Background="red"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>